<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Make the inside of the circle transparent -->
    <solid android:color="@android:color/transparent"/>

    <!-- Define the stroke (border) of the circle -->
    <stroke
        android:width="1dp"
        android:color="@color/purple_200"/> <!-- Set the stroke color -->
</shape>
